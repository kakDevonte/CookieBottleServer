      <input type="text" name="chanceGoodby" value="{{setups.bot.message.chanceGoodby}}"/>
    </div>
  </section>

  <section>
    <input type="hidden" name="section" value="bot.message">
    <input type="submit" name="save" value="Сохранить">
  </section>
</form>