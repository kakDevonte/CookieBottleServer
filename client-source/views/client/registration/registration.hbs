{{#if registrationSuccess}}
  <table align="center" valign="middle">
    <tr>
      <td>{{login}} регистрация завершена</td>
    </tr>
    <tr>
      <td>Зайти на сайт можно здесь <input type="button" value="Войти" onclick="location.href = '/login/'" /></td>
    </tr>
  </table>
{{else}}
  <form method="POST" action="/registration/">
    <table align="center" valign="middle">
      <tr>
        <td colspan="2" align="center">
          Регистрация
        </td>
      </tr>
      <tr>
        <td>Логин:</td><td><input type="text" name="login" value="{{isNull login ''}}" /></td>
      </tr>
      <tr>
        <td>Имя:</td><td><input type="text" name="name" value="{{isNull name ''}}" /></td>
      </tr>
      <tr>
        <td>Пароль:</td><td><input type="text" name="password" value="{{isNull password ''}}" /></td>
      </tr>
      <tr>
        <td>Пароль (повтор):</td><td><input type="text" name="passwordRetry" value="{{isNull passwordRetry ''}}" /></td>
      </tr>
      <tr>
        <td colspan="2" align="center">
          <input type="submit"  name="registration" value="Регистрация" />
        </td>
      </tr>
      {{#if errors}}
        <tr style="background-color: rgba(214, 0, 0, 0.42)">
          <td colspan="2" align="center">
            {{errors}}
          </td>
        </tr>
      {{/if}}
    </table>
  </form>
{{/if}}